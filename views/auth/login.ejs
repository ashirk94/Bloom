<div class="login-wrapper">
	<h1 class="title">Sign In</h1>
	<% if (locals.successMessage) { %>
		<div class="success-msg">✅ <%= locals.successMessage %></div>
	<% } %>
	<% if (locals.errorMessage) { %>
		<div class="error-msg">❌ <%= locals.errorMessage %></div>
	<% } %>

	<form method="post" autocomplete="on">
		<input type="text" placeholder="Email Address" name="uname" />
		<img
			src="/images/eye-slash-regular.png"
			class="eye"
			onclick="showPassword()"
			id="pass-checkbox"
		/>
		<input type="password" name="pw" placeholder="Password" id="password" />
		<input type="hidden" name="lat" id="lat" />
		<input type="hidden" name="lon" id="lon" />
		<input type="submit" value="Sign In" class="btn btn-primary" />
	</form>
	<div class="center-button button-container">
		<a href="/auth/github" class="github-login-button">
			<img src="/images/github-logo.png" alt="GitHub Logo" class="github-logo" />
			Log in with GitHub
		</a>
	</div>
</div>
<script src="/login.js" defer></script>
