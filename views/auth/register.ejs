<div class="login-wrapper">
	<h1 class="title">Create Your Account</h1>
	<h2 class="subtitle">Please enter a valid email address and password.</h2>
	<div class="error-msg">
		<% if (locals.message.error) { %> <%= locals.message.error %> <% } %>
	</div>
	<div id="validation"></div>
	<div id="success"></div>
	<form id="reg-form" method="post" autocomplete="off">
		<input
			type="text"
			placeholder="Email Address"
			name="uname"
			id="username"
		/>
		<img src="/images/eye-slash-regular.png" class="eye" onclick="showPassword()" id="pass-checkbox"/>
		<input type="password" name="pw" placeholder="Password" id="password" />
		<img src="/images/eye-slash-regular.png" class="eye" onclick="showConfirm()" id="confirm-checkbox"/>
		<input type="password" placeholder="Re-enter Password" id="confirm" />
		<input type="hidden" name="lat" id="lat" />
		<input type="hidden" name="lon" id="lon" />
		<input type="submit" value="Create Account" class="btn btn-primary" />
	</form>
    <div class="center-button button-container">
		<a href="/auth/github" class="github-login-button">
			<img src="/images/github-logo.png" alt="GitHub Logo" class="github-logo" />
			Sign up with GitHub
		</a>
	</div>
</div>
<script src="/location.js" defer></script>
<script src="/register.js" defer></script>
