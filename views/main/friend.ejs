<div class="main-wrapper">
	<div class="friend-box">
		<div class="box-top">
                <img
                    class="list-pic"
                    src="data:image/<%= friend.profilePic.contentType %>;base64,
    <%= friend.profilePic.data.toString('base64') %>"
            />
        </div>
        <div class="profile-name"><%= friend.firstName %></div>
        <% if (friend.bio) { %>
        <div class="bio"><%= friend.bio %></div>
        <% } else { %>
        <div class="bio"><br></div>
        <% } %>
        <span class="profile-info"><strong>Interests:</strong></span>
        <% for (let interest of friend.interests) { %>
        <span class="profile-info"><%= interest %></span>
        <% } %><br />
        <span class="profile-info"><strong>Values:</strong></span>
        <% for (let value of friend.values) { %>
        <span class="profile-info"><%= value %></span>
        <% } %>

        <div class="btn-card-group">
            <button
                class="btn-card btn-primary"
                id="like-btn"
                data-id="<%= friend.id %>"
            >
                Connect +</button
            >
        </div>
    </div>
	</div>
</div>
