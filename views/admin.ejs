<div class="main-wrapper">
	<h2 class="title">Delete Users</h2>
	<div class="friends-container">
		<% for (let friend of locals.accounts) { %>
		<div class="friend-box" id="<%= friend.id %>">
			<div class="box-top">
				<a href="/user/<%= friend.username %>">
					<img
						class="list-pic"
						src="data:image/<%= friend.profilePic.contentType %>;base64,
            <%= friend.profilePic.data.toString('base64') %>"
				/></a>
			</div>
			<div class="profile-name"><%= friend.firstName %></div>
			<% if (friend.bio) { %>
			<div class="bio"><%= friend.bio %></div>
			<% } else { %>
			<div class="bio"><br /></div>
			<% } %>

			<div class="btn-card-group">
                <form method="post" action="/delete-users/<%= friend.id %>">
                    <input type="submit" class="btn-delete" value="Delete" />
                </form>
			</div>

		</div>

		<% } %>
	</div>
</div>
